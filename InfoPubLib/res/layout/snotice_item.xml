<?xml version="1.0" encoding="UTF-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_space"
        android:paddingRight="@dimen/common_space" >

        <TextView android:layout_marginTop="10dp"
            android:id="@+id/detail_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:maxLines="2"
            android:textSize="18sp" />
		<TextView
            android:id="@+id/start_time_textview"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/detail_textview"
            android:textColor="@color/gray"       
            android:singleLine="true"
            android:textSize="16sp" />
		<TextView
            android:id="@+id/end_time_textview"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/start_time_textview"
            android:textColor="@color/gray"
            android:singleLine="true"
            android:textSize="16sp" />
		<TextView
            android:id="@+id/publish_tip_textview"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/detail_textview"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray"
            android:singleLine="true"
            android:textSize="16sp" />
    </RelativeLayout>