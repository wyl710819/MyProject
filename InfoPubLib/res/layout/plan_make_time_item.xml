<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_space"
    android:paddingRight="@dimen/common_space" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_select_item_h"
        android:paddingLeft="@dimen/common_space"
        android:paddingRight="@dimen/common_space"
         >

        <TextView
            android:id="@+id/time_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:textSize="@dimen/normal_font"
            android:text="Time1" />
        <CheckBox 
        	android:id="@+id/sel_item"
        	android:checked="false"
        	android:textSize="24sp"
        	android:layout_alignParentRight="true"
        	android:layout_centerVertical="true"
        	android:layout_marginRight="14dp"
        	android:layout_width="@dimen/select_check_box_w"
	    	android:layout_height="@dimen/select_check_box_w"
        	android:background="@drawable/checkbox_selector_tag"
        	android:button="@null" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_select_item_h"
        android:paddingLeft="@dimen/common_space"
        android:paddingRight="@dimen/common_space"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="start|center_vertical"
            android:textSize="@dimen/normal_font"
            android:text="@string/start_time" />

        <TextView
            android:id="@+id/start_time"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/normal_font"
            android:text="08:00" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_select_item_h"
        android:paddingLeft="@dimen/common_space"
        android:paddingRight="@dimen/common_space"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="start|center_vertical"
            android:textSize="@dimen/normal_font"
            android:text="@string/end_time" />

        <TextView
            android:id="@+id/end_time"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/normal_font"
            android:text="09:00" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_select_item_h"
        android:paddingLeft="@dimen/common_space"
        android:paddingRight="@dimen/common_space"
        android:orientation="horizontal" 
		android:weightSum="10" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="start|center_vertical"
            android:textSize="@dimen/normal_font"
            android:text="@string/repeat_times" />

        <TextView
            android:id="@+id/edit_repeat_time"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/normal_font"
            android:text="1" />
        
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_select_item_h"
        android:paddingLeft="@dimen/common_space"
        android:paddingRight="@dimen/common_space"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="start|center_vertical"
            android:textSize="@dimen/normal_font"
            android:text="@string/max_repeat_times" />

        <TextView
            android:id="@+id/edit_max_repeat_time"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/normal_font"
            android:text="65535" />
        
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/more" />
    </LinearLayout>

</LinearLayout>