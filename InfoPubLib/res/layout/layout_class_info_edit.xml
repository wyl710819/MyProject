<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <ScrollView
		android:id="@+id/myScrollView"
		android:scrollbars="none"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		>
		<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginLeft="10dp"
        android:id="@+id/title_llayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_space"
            android:gravity="left|center_vertical"
            android:text="标题"
            android:textColor="@android:color/black"
            android:textSize="@dimen/create_bottom_button_text_size" />

        <EditText
            android:id="@+id/edit_class_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/create_bottom_button_text_size"
            android:maxLength="16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginLeft="10dp"
        android:id="@+id/title1_llayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_space"
            android:gravity="left|center_vertical"
            android:text="副标题1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/create_bottom_button_text_size" />

        <EditText
            android:id="@+id/edit_class_info_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/create_bottom_button_text_size"
            android:maxLength="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:id="@+id/title2_llayout" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_space"
            android:gravity="left|center_vertical"
            android:text="副标题2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/create_bottom_button_text_size" />

        <EditText
            android:id="@+id/edit_class_info_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/create_bottom_button_text_size"
            android:maxLength="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginLeft="10dp"
        android:id="@+id/desc_llayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_space"
            android:gravity="left|center_vertical"
            android:text="描述"
            android:textColor="@android:color/black"
            android:textSize="@dimen/create_bottom_button_text_size" />
        

        <EditText
            android:id="@+id/edit_class_info_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="6"
            android:textColor="@android:color/black"
            android:textSize="@dimen/create_bottom_button_text_size"
            android:maxLength="105" />
    </LinearLayout>
　　　 <com.routon.inforelease.widget.SettingItem  
        	android:id="@+id/groupitem"  
        	android:layout_width="match_parent"  
        	android:layout_height="wrap_content"/> 
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:paddingLeft="10dp"
        android:id="@+id/topscreen_llayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_space"
            android:layout_centerVertical="true"
            android:text="插播(可屏蔽其它普通内容)"
            android:textColor="@android:color/black"
            android:textSize="@dimen/create_bottom_button_text_size" />     

        <ImageButton
            android:id="@+id/topscreen_switch"
            android:layout_width="126dp"
            android:layout_height="90dp"
            android:background="@null"
        	android:src="@drawable/switch_track" 
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="0dp"/>
      <ImageView android:layout_alignLeft="@id/name"
        	android:id="@+id/bottom_line"
        	android:layout_width="match_parent"
       	 	android:layout_height="wrap_content"
        	android:layout_alignParentBottom="true"
        	android:src="@drawable/line" />
    </RelativeLayout>
    <com.routon.inforelease.widget.SettingItem  
        	android:id="@+id/starttime_item"  
        	android:layout_width="match_parent"  
        	android:layout_height="wrap_content"/> 
    <com.routon.inforelease.widget.SettingItem  
        	android:id="@+id/endtime_item"  
        	android:layout_width="match_parent"  
        	android:layout_height="wrap_content"/> 
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/class_info_edit_img"
        android:scaleType="fitCenter"
        android:visibility="gone"
        />
    <com.routon.inforelease.widget.ClassPreviewView
        android:padding="5dp"
        android:id="@+id/class_info_edit_vp"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        />

    <LinearLayout  android:id="@+id/group_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bar"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:weightSum="2" >

        <Button
            android:id="@+id/btn_add_file"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_bg"
            android:drawableTop="@drawable/ic_add_material"
            android:text="@string/snotice_add"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_font" />

        <Button
            android:id="@+id/btn_del_file"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_bg"
            android:drawableTop="@drawable/ic_delete_material"
            android:text="@string/snotice_del"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_font" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>