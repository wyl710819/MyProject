<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
     <RelativeLayout 
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:id="@+id/add_pic_item_rl"
        android:background="@drawable/shape_edit"
        android:gravity="center"
        android:layout_marginLeft="5dp" 
        android:layout_marginRight="5dp"
        >
        <ImageView
            android:id="@+id/add_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:src="@drawable/add_img"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/add"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_below="@id/add_img"
            android:textColor="#aaaaaa"
            />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加图片"
            android:textSize="14sp"
            android:layout_below="@id/add"
            android:gravity="center_horizontal"
            android:textColor="#aaaaaa"
            />
        
        
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:id="@+id/add_audio_item_rl"
        android:background="@drawable/shape_edit"
        android:gravity="center"
        android:layout_marginLeft="5dp" 
        android:layout_marginRight="5dp"
        >
        <TextView
            android:id="@+id/record_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#ffa922"
            android:textSize="12sp"
            />
         <ImageView
            android:id="@+id/add_record_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:src="@drawable/record_normal"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/add_record"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_below="@id/add_record_img"
            android:textColor="#aaaaaa"
            />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="长按添加语音"
            android:textSize="14sp"
            android:layout_below="@id/add_record"
            android:gravity="center_horizontal"
            android:textColor="#aaaaaa"
            />
        
        
    </RelativeLayout>

</RelativeLayout>
