<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_h"
        android:background="#18b1ed" >

        <ImageView
            android:id="@+id/img_family_leave_add_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请假"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <TextView 
	        android:id="@+id/tv_family_leave_add_startTime"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:textSize="18sp"
	        android:textColor="#333333"
	        android:gravity="center"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="30dp"
	        android:layout_marginLeft="20dp"
	        android:text="请假开始时间:"/>
	    <Button 
	        android:id="@+id/btn_family_leave_select_startTime"
	        android:background="@drawable/shape_family_leave_stroke"
	        android:textSize="18sp"
	        android:textColor="#333333"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_alignTop="@id/tv_family_leave_add_startTime"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="40dp"/>
	    <TextView 
	        android:id="@+id/tv_family_leave_add_endTime"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:textSize="18sp"
	        android:textColor="#333333"
	        android:gravity="center"
	        android:layout_alignLeft="@id/tv_family_leave_add_startTime"
	       	android:layout_below="@id/tv_family_leave_add_startTime"
	        android:layout_marginTop="30dp"
	        android:text="请假结束时间:"/>
	    <Button 
	        android:id="@+id/btn_family_leave_select_endTime"
	        android:background="@drawable/shape_family_leave_stroke"
	        android:textSize="18sp"
	        android:textColor="#333333"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_below="@id/btn_family_leave_select_startTime"
	        android:layout_alignLeft="@id/btn_family_leave_select_startTime"
	        android:layout_marginTop="30dp"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:textSize="18sp"
	        android:textColor="#333333"
	        android:gravity="center"
	        android:layout_alignLeft="@id/tv_family_leave_add_endTime"
	       	android:layout_below="@id/tv_family_leave_add_endTime"
	        android:layout_marginTop="30dp"
	        android:text="请假事由:"/>
	    <EditText 
	        android:id="@+id/edt_family_leave_add_reason"
	        android:background="@drawable/shape_family_leave_stroke"
	        android:textSize="18sp"
	        android:textColor="#333333"
	        android:layout_width="170dp"
	        android:layout_height="100dp"
	        android:padding="10dp"
	        android:maxLines="4"
	         android:maxLength="32"
	        android:gravity="center_horizontal"
	        android:layout_below="@id/btn_family_leave_select_endTime"
	        android:layout_alignLeft="@id/btn_family_leave_select_endTime"
	        android:layout_marginTop="30dp"/>
	    <ImageView 
	        android:id="@+id/img_family_leave_add_index"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/edt_family_leave_add_reason"
	        android:src="@drawable/ic_family_leave_add_index"
	        android:layout_marginTop="20dp"
	        android:layout_centerHorizontal="true"/>
	    <TextView 
	        android:id="@+id/tv_family_leave_add_teacher_tag"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:textColor="#333333"
	        android:gravity="center"
	        android:layout_alignLeft="@id/tv_family_leave_add_endTime"
	       	android:layout_below="@id/img_family_leave_add_index"
	        android:layout_marginTop="20dp"
	        android:text="班主任:"/>
	    <TextView 
	        android:id="@+id/tv_family_leave_add_teacher"
	        android:textSize="18sp"
	        android:textColor="#18b1ed"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_alignTop="@id/tv_family_leave_add_teacher_tag"
	        android:layout_alignLeft="@id/btn_family_leave_select_endTime"/>
	    <Button 
	        android:id="@+id/btn_family_leave_add_commit"
	        android:layout_below="@id/tv_family_leave_add_teacher"
	        android:background="#18b1ed"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="100dp"
	        android:text="提交"
	        android:textColor="#ffffff"
	        android:textSize="18sp"/>
	</RelativeLayout>
</LinearLayout>