<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="附注编辑:"
        android:id="@+id/text_edit_title"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/homework_text_color"
        />
    <EditText
            android:id="@+id/text_edit_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_red"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_below="@id/text_edit_title"
            android:textSize="16sp" 
            />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/text_edit_view"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/edit_negative_but"
            android:text="取消"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <View 
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="@color/homework_text_color"
            android:layout_gravity="center"
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/edit_positive_but"
            android:text="完成"
             android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        
    </LinearLayout>

</RelativeLayout>
