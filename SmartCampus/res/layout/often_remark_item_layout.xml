<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/often_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    
    <CheckBox   
	       	android:id="@+id/remark_item_checkbox"  
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"  
	        android:layout_alignParentLeft="true"  
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="5dp"
	        android:focusable="false"
	        android:clickable="false"
	        android:button="@drawable/remark_check_sel" 
         />  
    <TextView
            android:id="@+id/del_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_del_badge"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="5dp"
            android:text="删除"
            android:textColor="@color/often_badge_red"
            android:textSize="16sp" />
    
    
         <RelativeLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/often_remark_rl"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/remark_item_checkbox"
            android:layout_toLeftOf="@id/del_btn"
             >
       <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remark_item_badgetitle"
            android:textSize="18sp"
            android:textStyle="bold"
            />
       <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remark_item_integral"
            android:textSize="18sp"
            android:layout_toRightOf="@id/remark_item_badgetitle"
            android:layout_marginLeft="30dp"
            android:textColor="@color/text_green_color"
            />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/remark_item_badgeremark"
            android:layout_below="@id/remark_item_badgetitle"
            android:textSize="16sp"
            />

        </RelativeLayout>
        </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/add_remark_item"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/item_add_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/select_add" />

        <TextView
            android:id="@+id/item_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/item_add_img"
            android:text="添加常用评语"
            android:textColor="#786b62"
            android:textSize="18sp" />

       <View 
           android:layout_width="match_parent"
           android:layout_height="0.2dp"
           android:layout_alignParentBottom="true"
           android:background="@color/gray"
           />
    </RelativeLayout>
    
    
</RelativeLayout>
