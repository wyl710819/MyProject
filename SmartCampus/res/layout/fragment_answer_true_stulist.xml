<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#968980">
    
    
     <RelativeLayout
        android:id="@+id/rl_title_view"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rl_timer_bg">

       
            <TextView
	            android:id="@+id/answer_count"
	            android:layout_width="match_parent"
	            android:layout_height="30dp"
	            android:layout_gravity="center"
	            android:layout_marginTop="40dp"
	            android:textSize="20sp"
	            android:text=""
	            android:layout_marginLeft="20dp"
	            />
            <TextView  
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:id="@+id/answer_true_btn"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/answer_flower_btn"
                android:padding="5dp"
                android:background="@drawable/answer_true_btn"/>
            <TextView  
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:id="@+id/answer_flower_btn"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
            	android:layout_marginRight="20dp"
                android:padding="5dp"
                android:background="@drawable/flower_btn"/>

        
    </RelativeLayout>
   
     <View 
         android:layout_width="match_parent"
         android:layout_height="5dp"
         android:background="#968980"/>
    <GridView 
        android:id="@+id/gv_stu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="2"
        android:numColumns="3"
        >
        
    </GridView>

</LinearLayout>
