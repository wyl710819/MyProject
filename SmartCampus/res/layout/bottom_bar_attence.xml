<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#181818"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_attence_start_index"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="20sp"
        android:drawableTop="@drawable/ic_student_attence_index"
        android:text="学生考勤"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/tv_attence_search_index"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="20sp"
        android:drawableTop="@drawable/ic_search_attence_index"
        android:text="缺勤查询"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/tv_attence_exit_index"
       	android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="20sp"
        android:drawableTop="@drawable/ic_attence_exit_index"
        android:text="退出"
        android:textColor="#666666" />

</LinearLayout>