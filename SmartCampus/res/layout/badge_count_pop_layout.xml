<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="wrap_content" 
    android:background="@color/white"
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/pop_rado_item"
        >
        <ImageView 
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/rado_item_img"
            android:src="@drawable/rado_menu"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="雷达图"
            android:layout_toRightOf="@id/rado_item_img"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>
    <View 
        android:layout_width="120dp"
        android:layout_height="0.2dp"
        android:layout_centerHorizontal="true"
         android:layout_below="@id/pop_rado_item"
         android:background="@color/line_color"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/pop_zigzag_item"
        android:layout_below="@id/pop_rado_item"
        >
        
        <ImageView 
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/zigzag_item_img"
            android:src="@drawable/zigzag_menu"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="折线图"
            android:layout_toRightOf="@id/zigzag_item_img"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            />
        
        
    </RelativeLayout>
     <View 
        android:layout_width="120dp"
        android:layout_height="0.2dp"
        android:layout_centerHorizontal="true"
         android:layout_below="@id/pop_zigzag_item"
         android:background="@color/line_color"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/pop_histogram_item"
        android:layout_below="@id/pop_zigzag_item"
        >
        <ImageView 
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/histogram_item_img"
            android:src="@drawable/histogram_menu"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="柱状图"
            android:layout_toRightOf="@id/histogram_item_img"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>
     <View 
        android:layout_width="120dp"
        android:layout_height="0.2dp"
        android:layout_centerHorizontal="true"
         android:layout_below="@id/pop_histogram_item"
         android:background="@color/line_color"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/pop_count_item"
        android:layout_below="@id/pop_histogram_item"
        >
        <ImageView 
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/count_item_img"
            android:src="@drawable/badge_rank_menu"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="统计排名"
            android:layout_toRightOf="@id/count_item_img"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>
    

</RelativeLayout>
