<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp" >

    <TextView
        android:id="@+id/tv_exchange_award_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FEBD0E"
        android:gravity="center"
        android:textSize="18sp" 
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tv_exchange_award_name"
        android:background="#FFE6B6" >

        <ImageView
            android:id="@+id/img_exchange_award_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_exchange_award_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/img_exchange_award_image"
          	android:layout_alignParentTop="true"
          	android:layout_marginTop="20dp"
            android:textSize="20sp" 
            android:singleLine="true"
            android:ellipsize="marquee"/>

        <TextView
            android:id="@+id/tv_exchange_award_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/img_exchange_award_image"
            android:textSize="20sp" 
            android:singleLine="true"
            android:ellipsize="marquee"/>
    </RelativeLayout>

</RelativeLayout>