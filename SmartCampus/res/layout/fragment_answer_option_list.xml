<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/rl_title_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:background="@drawable/rl_timer_bg">
        <LinearLayout 
            android:id="@+id/ll_timer"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/timer_bg"
            android:orientation="horizontal">
            <ImageView 
                android:id="@+id/img_min_tens"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                />
             <ImageView 
                android:id="@+id/img_min_ones"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                
                />
              <ImageView 
                android:id="@+id/img_sec_tens"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                />
               <ImageView 
                android:id="@+id/img_sec_ones"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <RelativeLayout 
            android:id="@+id/rl_status"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/ll_timer">
            <TextView
	            android:id="@+id/already_answer"
	            android:layout_width="match_parent"
	            android:layout_height="30dp"
	            android:text="已答:0位同学"
	            android:layout_marginTop="8dp"
	            android:layout_marginLeft="10dp"/>
            <TextView 
                android:id="@+id/non_answer"
                android:layout_width="match_parent"
	            android:layout_height="30dp"
	            android:layout_below="@id/already_answer"
	            android:text="未答:0位同学"
	            android:layout_marginLeft="10dp"
	            
                />
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="145dp"
            android:orientation="horizontal"
            android:layout_below="@id/rl_status">
            <TextView  
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:id="@+id/time_chart"
                android:background="@drawable/time_chart_btn"
                />
            <TextView  
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:id="@+id/percent_chart"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:background="@drawable/option_chart_btn"/>
            <TextView  
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:id="@+id/count_chart"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:background="@drawable/stucount_chart_btn"/>
            
        </LinearLayout>
        
    </RelativeLayout>
    <ListView 
        android:id="@+id/lv_option"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginTop="5dp"
        android:dividerHeight="5dp"
        android:divider="#00000000"
		android:background="#968980"  
        >
        
    </ListView>

</LinearLayout>
