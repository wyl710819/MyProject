<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingTop="5dp"
    android:paddingLeft="@dimen/common_dp_10"
    android:paddingRight="@dimen/common_dp_10"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image"
        android:layout_width="@dimen/flower_grid_item_w"
        android:layout_height="@dimen/flower_grid_item_h"
        android:padding="5dp" 
        android:scaleType="fitXY"
        android:layout_centerInParent="true"/>
	<ImageView
        android:id="@+id/focusimage"
        android:src="@drawable/flower_sel"
        android:layout_width="@dimen/flower_grid_item_w"
        android:layout_height="@dimen/flower_grid_item_h" 
        android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_centerInParent="true"/>
	<TextView 
	    android:id="@+id/teacher_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="李老师"
	    android:layout_marginTop="15dp"
	    android:textSize="16sp"
	    android:lines="1"
	    android:singleLine="true"
	    android:layout_below="@id/image"
	    android:layout_centerHorizontal="true"
	    />
</RelativeLayout>