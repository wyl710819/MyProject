<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.routon.smartcampus.gradetrack.GradeTrackTitle
        android:id="@+id/rado_pic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	 <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rado_line_view"
        android:layout_below="@id/rado_pic_title"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <View 
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="@drawable/shape_line_blue"
            android:layout_gravity="center_vertical"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            android:id="@+id/txt_rado_student"
            />
        <View 
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="@drawable/shape_line_yellow"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平均"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            />
        
    </LinearLayout>
    <com.routon.smartcampus.view.RadoView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/radoView"
         android:layout_below="@id/rado_line_view"
         android:layout_marginTop="20dp"
         />
</RelativeLayout>
