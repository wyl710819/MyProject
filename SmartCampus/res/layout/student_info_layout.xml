<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/student_info_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/badge_student_info_height"
    android:background="@drawable/badge_student_info_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/student_info_layout_margin"
        android:background="@drawable/badge_student_info"
        android:orientation="horizontal" >

        <!--
                 <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/image"
                android:layout_width="@dimen/student_info_pic_w"
                android:layout_height="@dimen/student_info_pic_w"
                android:layout_margin="@dimen/common_dp_10"
                android:src="@drawable/default_pic" />
        -->

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/student_info_pic_w"
            android:layout_height="@dimen/student_info_pic_h"
            android:layout_margin="@dimen/common_dp_10"
            android:src="@drawable/default_student" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/student_info_layout_margin"
            android:layout_marginTop="@dimen/student_info_layout_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/student_info1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/student_badge_info_height"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/student_info3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/student_info2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18sp" />
            
            
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>