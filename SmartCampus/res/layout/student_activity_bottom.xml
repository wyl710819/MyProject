                style="@style/student_bottom_iv"
                android:src="@drawable/ic_statistics" />

            <TextView
                 android:id="@+id/bottom_tv_statistics"
                 style="@style/student_bottom_tv"
                android:text="统计排行"
                />
        </LinearLayout>
         <LinearLayout
            android:id="@+id/bottom_ll_exit"
             style="@style/student_bottom_ll"
              >

            <ImageView
                 android:id="@+id/bottom_iv_exit"
                style="@style/student_bottom_iv"
                android:src="@drawable/menu_exit" />

            <TextView
                 android:id="@+id/bottom_tv_exit"
