<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >

    <View
        android:id="@+id/select_content_bg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/select_content_green_rectangle_shape"
        android:layout_marginLeft="11dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/select_content"
        android:layout_width="30dp"
	    android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:paddingBottom="3dp"
        android:text="A"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/answer_gray_bg" />
	<ImageView
	    android:id="@+id/img_answer_true_btn"
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:src="@drawable/img_answer_true"
	    android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
	    android:visibility="invisible"/>
</FrameLayout>