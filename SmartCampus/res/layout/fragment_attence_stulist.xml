<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/rl_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/attendance_count_bg"
        android:orientation="horizontal">
        <TextView
	         android:layout_width="match_parent"
	         android:layout_height="30dp"
	         android:text="@string/attance_title"
	         android:layout_marginTop="4dp"
	         android:layout_marginLeft="8dp"
	         android:textSize="13sp"
	         android:textColor="#FFFFFF"/>
        <TextView
	         android:id="@+id/all_stu"
	         android:layout_width="65dp"
	         android:layout_height="30dp"
	         android:text="应到:0人"
	         android:layout_marginTop="13dp"
	         android:layout_marginLeft="40dp"/>
         <TextView
	         android:id="@+id/already_come"
	         android:layout_width="65dp"
	         android:layout_height="30dp"
	         android:text="实到:0人"
	         android:layout_marginTop="13dp"
	         android:layout_marginLeft="10dp"/>
          <TextView 
             android:id="@+id/non_come"
             android:layout_width="65dp"
	         android:layout_height="30dp"
	         android:text="未到:0人"
	         android:layout_marginLeft="10dp"
	         android:layout_marginTop="13dp"
             />
      
    </LinearLayout>
   
    <GridView 
        android:id="@+id/gv_preempt_stu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#FFFFFF"
        android:numColumns="3"
        android:verticalSpacing="5dp"
        android:horizontalSpacing ="5dp" 
        >
        
    </GridView>
    

</LinearLayout>
