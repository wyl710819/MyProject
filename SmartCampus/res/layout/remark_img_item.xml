<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/remark_fm_item_view"
        android:layout_margin="2dp">
         
         <ImageView 
	        android:layout_width="90dp"
	        android:layout_height="120dp"
	        android:id="@+id/remark_img_item_view"
	        android:scaleType="centerCrop"
	        android:layout_margin="2dp"
        	/>
         <ImageView
            android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:id="@+id/delete_homework_img"
	        android:src="@drawable/delete_homework_res"
	        android:layout_gravity="top|right"
	        android:layout_marginTop="4dp"
	        android:layout_marginRight="2dp"
	        />
    </FrameLayout>
   
    <RelativeLayout 
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/record_display"
        android:background="@drawable/shape_edit"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        >
         <ImageView
            android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:id="@+id/delete_homework_record"
	        android:src="@drawable/delete_homework_res"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
	        android:layout_marginTop="2dp"
	        android:layout_marginRight="2dp"
	        />
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/record_blue_rectangle_shape"
            android:layout_marginTop="40dp"
           >
        <ImageView
	        android:id="@+id/play_record_img"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:background="@drawable/play_record_anim"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30s"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/play_record_img"
            android:id="@+id/tv_record_time"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            />
        </RelativeLayout>
    
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/remark_add_item_view"
        android:background="@drawable/shape_edit"
        android:gravity="center"
        android:layout_margin="2dp"
        >
        <ImageView
            android:id="@+id/add_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:src="@drawable/add_img"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/add"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_below="@id/add_img"
            android:textColor="#aaaaaa"
            />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加图片"
            android:textSize="14sp"
            android:layout_below="@id/add"
            android:gravity="center_horizontal"
            android:textColor="#aaaaaa"
            />
        
        
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/remark_add_record_item_view"
        android:background="@drawable/shape_edit"
        android:gravity="center"
        android:layout_toRightOf="@id/remark_add_item_view"
        android:layout_margin="2dp"
        >
       
        <TextView
            android:id="@+id/record_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#ffa922"
            android:textSize="12sp"
            />
         <ImageView
            android:id="@+id/add_record_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:src="@drawable/record_normal"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/add_record"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_below="@id/add_record_img"
            android:textColor="#aaaaaa"
            />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="长按添加语音"
            android:textSize="14sp"
            android:layout_below="@id/add_record"
            android:gravity="center_horizontal"
            android:textColor="#aaaaaa"
            />
        
        
    </RelativeLayout>
    
    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
