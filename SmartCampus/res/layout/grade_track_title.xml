<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#EAE4D9" >

    <ImageView
        android:id="@+id/imgbtn_back"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/ic_homework_back" />

    <TextView
        android:id="@+id/txt_gradetrack_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/imgbtn_back"
        android:gravity="center_vertical"
        android:textColor="@color/homework_text_color"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/relativelayout_gradetrack_title_center"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/correct_rectangle_shape_red"
        android:clickable="true"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txt_grade_class"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="班级列表"
            android:textColor="@color/homework_text_color"
            android:textSize="16sp" 
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/coursetable_class_iv_sel"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/correct_down_arrow" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_show_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:visibility="gone" />

</RelativeLayout>