<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/photo_tv"
        style="@style/normalBlackText"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:gravity="right"
        android:text="@string/phonenum" />

    <EditText
        android:id="@+id/phone_edit"
        android:layout_width="@dimen/register_edit_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/photo_tv"
        android:inputType="phone" />

    <com.routon.inforelease.widget.CountdownButton
        android:id="@+id/get_vertify_num_text"
        style="@style/normalBlackText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/phone_edit"
        android:layout_below="@id/phone_edit"
        android:background="@drawable/round_rect_btn"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/get_vertify_num" />

    <TextView
        android:id="@+id/vertify_tv"
        style="@style/normalBlackText"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_vertify_num_text"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/photo_tv"
        android:gravity="right"
        android:text="@string/vertify_num" />

    <EditText
        android:id="@+id/vertify_edit"
        android:layout_width="@dimen/register_edit_width"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vertify_tv"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/vertify_tv" />
    
    <TextView
        android:id="@+id/tv_first_pwd"
        style="@style/normalBlackText"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/vertify_tv"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:text="@string/login_label_password" />

    <EditText
        android:id="@+id/edt_first_pwd"
        android:layout_width="@dimen/register_edit_width"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_first_pwd"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tv_first_pwd"
        android:hint="@string/hint_input_pwd"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tv_ensure_pwd"
        style="@style/normalBlackText"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_first_pwd"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:text="@string/ensure_register_pwd" />

    <EditText
        android:id="@+id/edt_ensure_pwd"
        android:layout_width="@dimen/register_edit_width"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_ensure_pwd"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tv_ensure_pwd"
        android:hint="@string/hint_input_pwd" 
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_below="@id/edt_ensure_pwd"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/publish_btn"
        android:text="注册"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>