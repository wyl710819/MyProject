<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF0E6"
    android:id="@+id/mPopRoot"
   >  
            <RelativeLayout
	            android:id="@+id/rl_chatview"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="10dp"
	            android:gravity="center"
	             >

            <com.routon.smartcampus.answerrelease.AnsTimeLineChartView
                android:id="@+id/ans_time_lineview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp" />

            <TextView 
                android:id="@+id/percent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"
                android:text="百分比图"
                android:visibility="invisible"/>
            <com.routon.smartcampus.answerrelease.PieChartView
                android:id="@+id/piechart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/percent_title"
                android:layout_marginLeft="8dp"
                android:visibility="invisible" />

            <com.routon.smartcampus.answerrelease.LineChartView
                android:id="@+id/lineView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:visibility="gone" />
        </RelativeLayout>


</RelativeLayout >